.list-cell
  margin: 10rpx 30rpx
  // background-color red
  .user-contaniner
    font-size: 30rpx
    color: #888
    flex-shrink: 0
    align-items: center
    display: flex
    margin-bottom: 30rpx

  .user-contaniner ._img
    flex-shrink: 0
    width: 72rpx
    height: 72rpx
    border-radius: 36rpx  
    margin-right: 21rpx

  .user-contaniner .focus-container
    position: absolute
    right: 30rpx

  .title-container
    font-weight: 700
    margin-bottom: 30rpx
    font-size: 46rpx
    color: #353535
    white-space: nowrap
    overflow: hidden
    text-overflow: ellipsis

  .cover-container
    position: relative
    box-shadow: 0 15rpx 25rpx rgba(197, 197, 197, 0.63)
    border-radius: 24rpx
    overflow: hidden

  .cover-container image
    width: 100%
    height: 100%

  .cover-container .pause-button
    width: 54rpx
    height: 54rpx
    position: absolute
    left: 20rpx
    top: 20rpx

  .comment-container
    position: relative
    display: flex
    align-items: center
    height: 122rpx
    margin-bottom: 30rpx

  .comment-container ._img
    width: 48rpx
    height: 48rpx

  .comment-container .image-container
    display: flex
    justify-content: flex-end
    position: absolute
    right: 0
    align-items: center

  .comment-container .image-container .like-container
    margin-right: 30rpx

  .comment-container .image-container .comment-count-container
    font-size: 36rpx
    display: flex
    align-items: center

  .comment-container .image-container .comment-count-container image
    margin-right: 10rpx
    width: 47.9rpx
    height: 43.5rpx

  .likeDiv-container
    display: flex
    align-items: center
    margin: 0
    flex-direction: row

  .likeDiv-container .like-image
    width: 47.9rpx
    height: 43.5rpx
    margin-right: 10rpx
